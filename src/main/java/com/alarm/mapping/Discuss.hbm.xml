<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="com.alarm.model.Discuss" 
    table="discuss"
>

    <id
        name="id"
        type="java.lang.Integer"
        column="id"
    >
        <generator class="increment" />
    </id>

    <property
        name="title"
        type="java.lang.String"
        column="title"
        not-null="true"
        length="255"
    />
    <property
        name="content"
        type="java.lang.String"
        column="content"
        not-null="true"
        length="2147483647"
    />
    <!-- <property
        name="userId"
        type="int"
        column="user_id"
        not-null="true"
        length="10"
    /> -->
    <property
        name="createDate"
        type="java.sql.Timestamp"
        column="create_date"
        not-null="true"
        length="19"
    />
    <property
        name="modifyDate"
        type="java.sql.Timestamp"
        column="modify_date"
        not-null="true"
        length="19"
    />
    <property
        name="deleted"
        type="int"
        column="deleted"
        not-null="true"
        length="10"
    />

    <!-- Associations -->
  	<many-to-one name="user" unique="true" column="user_id" class="com.alarm.model.User" cascade="save-update"></many-to-one>
	<one-to-one name="expert"></one-to-one>
	<list name="comment" inverse="true">
		<key column="discuss_id"></key>
		<index column="id"/>
		<one-to-many class="com.alarm.model.Comment"></one-to-many>
	</list>
	
</class>
</hibernate-mapping>
